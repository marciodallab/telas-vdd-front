import 'package:flutter/material.dart';

class TelaBarraFixa extends StatelessWidget {
  const TelaBarraFixa({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: const Color(0xFFF8F8FF),
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.symmetric(vertical: 40),
          child: Column(
            mainAxisAlignment: MainAxisAlignment.start,
            children: [
              // Seção do topo com logo
              Column(
                children: [
                  Image.asset(
                    'assets/images/IMG_6624.jpeg', // Ajuste o caminho se necessário
                    width: 200,
                    height: 100,
                    fit: BoxFit.contain,
                  ),
                ],
              ),
              const SizedBox(height: 40),

              // Botões principais
              Column(
                children: [
                  _buildBlackButton(context, 'Barra Fixa'),
                  const SizedBox(height: 16),
                  _buildBlackButton(context, 'Adicionar treino'),
                  const SizedBox(height: 16),
                  _buildBlackButton(context, 'Ver progressão'),
                ],
              ),
            ],
          ),
        ),
      ),
    );
  }

  Widget _buildBlackButton(BuildContext context, String text) {
    final screenWidth = MediaQuery.of(context).size.width;

    return SizedBox(
      width: screenWidth * 0.8,
      child: ElevatedButton(
        style: ElevatedButton.styleFrom(
          backgroundColor: Colors.black,
          padding: const EdgeInsets.symmetric(vertical: 14, horizontal: 30),
          shape: RoundedRectangleBorder(
            borderRadius: BorderRadius.circular(8),
          ),
          elevation: 3,
        ),
        onPressed: () {
          // Adicione ações aqui
        },
        child: Text(
          text,
          style: const TextStyle(
            color: Colors.white,
            fontSize: 16,
            fontWeight: FontWeight.w600,
          ),
        ),
      ),
    );
  }
}
